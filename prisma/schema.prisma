generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enum Role {
//   USER
//   ADMIN
// }

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String
  // role     Role    @default(ADMIN)
  image    String?

  blogs     Blog[]
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Blog {
  id        String   @id @default(cuid())
  title     String   @unique
  content   String
  thumbnail String
  slug      String   @unique
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  tags      String[]
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id            String   @id @default(cuid())
  thumbnail     String
  title         String
  description   String
  features      String[]
  // tags          String[]
  technologies  String[]
  live_link     String
  githubClient  String?
  githubBackend String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model About {
  id        String  @id @default("SINGLETON_ID")
  fullName  String
  title     String
  bio       String
  image     String
  whatILove String?
  email     String
  phone     String
  location  String
  github    String
  linkedin  String

  skills String[]

  education   Json?
  experiences Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
